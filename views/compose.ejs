<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="publishTitle" id="" autocomplete="off" required>
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" rows="5" name="publishContent"></textarea>
    </div>
    <div class="form-group">
        <label>Insert Image</label>
        <input type="file" id="image" name="image" >
    </div>
    <div>
    <button type="submit" name="button" value="Publish/Update" class="btn btn-primary">Publish/Update</button>
    <button type="submit" name="button" value="Delete" class="btn btn-primary">Delete</button>
    </div>
</form>


<%- include("partials/footer") -%>